# Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ai-credit-manager

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# AI/ML Configuration
AI_MODEL_PATH=./models/credit-scoring-model
TENSORFLOW_MODEL_URL=https://ai-models.hbus.com/credit-scoring

# External API Keys (Replace with actual keys)
CREDIT_BUREAU_API_KEY=your-credit-bureau-api-key
FRAUD_DETECTION_API_KEY=your-fraud-detection-api-key
KYC_VERIFICATION_API_KEY=your-kyc-verification-api-key

# Email Configuration
SMTP_HOST=smtp.hbus.com
SMTP_PORT=587
SMTP_USER=noreply@hbus.com
SMTP_PASS=your-smtp-password

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_SALT_ROUNDS=12

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png